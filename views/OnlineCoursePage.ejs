<html>

<head>
    <meta charset="utf-8">
    <meta name="name" content="content">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Online Courses - Tolumi THe Fashion People</title>
    <link href="https://fonts.googleapis.com/css?family=Rokkitt:300,400,500,600,700,800,900&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/Libraries/bootstrap/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/Libraries/slick/slick.css" />
    <link rel="stylesheet" type="text/css" href="/Libraries/slick/slick-theme.css" />
    <link rel="stylesheet" href="/Styles/index.css">
    <link rel="stylesheet" href="/Styles/onlineCourses.css">
</head>

<body>
    <nav role="navigation" class="navbar navbar-expand-lg navbar-light bg-white">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img class="img-fluid" src="/Images/Logo.jpg" width="163px" />
            </a>

            <button class="navbar-toggler border-0" type="button" data-toggle="collapse"
                data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/theFashionSchool">Home <span class="sr-only">(current)</span></a>
                    </li>

                    <li class="nav-item dropdown mx-md-4">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Courses
                        </a>

                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="/onlineCourses">Online courses</a>
                            <a class="dropdown-item" href="/onsiteCourses">Onsite courses</a>
                        </div>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Brands
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="#">TFP Accessories</a>
                            <a class="dropdown-item" href="#">TFP Bridals</a>
                    </li>

                    <li class="nav-item mx-md-4">
                        <a class="nav-link" href="#">Contact us</a>
                    </li>

                    <li class="nav-item ml-md-4">
                        <a class="nav-link btn btn-outline-warning px-3 linear-gradient" href="#">
                            Login
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <% Courses.map( course => { %>
    <% if ( course.id == courseID) { %>
    <header role="heading" class="text-center text-white py-5 coursePageHeading">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 text-center text-lg-left">
                    <h1 class="mt-1 mt-lg-5 onlineCourseHeading">
                        <%= course.Title %>
                    </h1>

                    <p class="lead onlineCourseSub">
                        <%= course.SubTitle %>
                    </p>

                    <button class="btn btn-light btn-lg rounded-sm courseBtnTextColor my-4 px-5 d-none d-lg-block">
                        Enroll now
                        <img src="/Icons/icon-arrow-right.svg" class="img-fluid" />
                    </button>
                </div>

                <div class="col-lg-4 d-none d-lg-block">
                    <div class="card mt-lg-5 mt-2 border-0 shadow-sm bg-light headerCard"">
                        <video width=" 100%" height="auto" controls autoplay>
                        <source src="https://res.cloudinary.com/bolub/video/upload/v1579305953/1.mkv" type="video/mp4">
                        Your browser does not support the video tag.
                        </video>

                        <div class="card-body text-dark">
                            <ul class="list-unstyled mx-2">
                                <!-- Fee -->
                                <li class="d-flex lead justify-content-between">
                                    <div class="d-flex">
                                        <svg class="text-icon my-auto mr-3" style="width:24px; height:24px;">
                                            <use class="coursePageHeaderIconColor"
                                                xlink:href="/Icons/symbol-defs.svg#cash">
                                            </use>
                                        </svg>
                                        Fee
                                    </div>

                                    <div id="fee" class="font-weight-bold"><%= course.Fee %></div>
                                </li>

                                <!-- Duration -->
                                <li class="d-flex lead justify-content-between my-4">
                                    <div class="d-flex">
                                        <svg class="text-icon my-auto mr-3" style="width:24px; height:24px;">
                                            <use class="coursePageHeaderIconColor"
                                                xlink:href="/Icons/symbol-defs.svg#time">
                                            </use>
                                        </svg>
                                        Duration
                                    </div>

                                    <div id="duration" class="font-weight-bold">
                                        <%= course.Duration %>
                                    </div>
                                </li>

                                <li class="d-flex lead justify-content-between my-3">
                                    <div class="d-flex">
                                        <svg class="text-icon my-auto mr-3" style="width:24px; height:24px;">
                                            <use class="coursePageHeaderIconColor"
                                                xlink:href="/Icons/symbol-defs.svg#duration"></use>
                                        </svg>
                                        Difficulty
                                    </div>

                                    <div id="difficulty" class="font-weight-bold">
                                        <%= course.Difficulty %>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <main role="main">
        <div class="container">
            <div class="card mt-lg-5 mt-2 border-0 d-lg-none shadow bg-light" style="margin-top: -50px !important;">
                <video class="border-bottom" width=" 100%" height="auto" controls autoplay>
                    <source src="https://res.cloudinary.com/bolub/video/upload/v1579305953/1.mkv" type="video/mp4">
                    Your browser does not support the video tag.
                </video>
            
                <div class="card-body text-dark">
                    <ul class="list-unstyled mx-2">
                        <!-- Fee -->
                        <li class="d-flex lead justify-content-between">
                            <div class="d-flex">
                                <svg class="text-icon my-auto mr-3" style="width:24px; height:24px;">
                                    <use class="coursePageHeaderIconColor" xlink:href="/Icons/symbol-defs.svg#cash">
                                    </use>
                                </svg>
                                Fee
                            </div>
            
                            <div id="fee" class="font-weight-bold"><%= course.Fee %></div>
                        </li>
            
                        <!-- Duration -->
                        <li class="d-flex lead justify-content-between my-4">
                            <div class="d-flex">
                                <svg class="text-icon my-auto mr-3" style="width:24px; height:24px;">
                                    <use class="coursePageHeaderIconColor" xlink:href="/Icons/symbol-defs.svg#time">
                                    </use>
                                </svg>
                                Duration
                            </div>
            
                            <div id="duration" class="font-weight-bold">
                                <%= course.Duration %>
                            </div>
                        </li>
            
                        <li class="d-flex lead justify-content-between my-3">
                            <div class="d-flex">
                                <svg class="text-icon my-auto mr-3" style="width:24px; height:24px;">
                                    <use class="coursePageHeaderIconColor" xlink:href="/Icons/symbol-defs.svg#duration">
                                    </use>
                                </svg>
                                Difficulty
                            </div>
            
                            <div id="difficulty" class="font-weight-bold">
                                <%= course.Difficulty %>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- about -->
        <% if(course.about.length > 6){ %>
        <section class="py-5 border lead bg-light">
            <div class="container">
                <h2 class="text-capitalize linear-gradient mt-5 mt-mdlg">About the course</h2>

                <div class="row">
                    <div class="col-md-8 lead">
                        <p class="mt-1">
                            <%= course.about %>
                        </p>
                    </div>
                </div>
            </div>
        </section>
        <% } %>

        <!-- Learn -->
        <% if(course.LearnOne.length > 0){ %>
        <section id="Learn" class="bg-light py-5">
            <div class="container">
                <h2 class="text-capitalize linear-gradient mt-lg-4">what you'll learn</h2>

                <div class="row">
                    <div class="col-md-8">
                        <div class="row mt-1">
                            <div class="col-md-6">
                                <ul class="list-unstyled lead mb-0 mt-">
                                    <% course.LearnOne.map(learn => { %>
                                    <li class="d-flex mb-2">
                                        <svg class="text-icon my-auto mr-3" style="width:24px; height:24px;">
                                            <use class="coursePageHeaderIconColor"
                                                xlink:href="/Icons/symbol-defs.svg#scissors">
                                            </use>
                                        </svg>

                                        <span class="my-auto font-weight-medium">
                                            <%= learn %>
                                        </span>
                                    </li>
                                    <% }) %>
                                </ul>

                            </div>

                            <div class="col-md-6">
                                <ul class="list-unstyled lead mt-0 mt-">
                                    <% course.LearnTwo.map(learn => { %>
                                    <li class="d-flex mt-2">
                                        <svg class="text-icon my-auto mr-3" style="width:24px; height:24px;">
                                            <use class="coursePageHeaderIconColor"
                                                xlink:href="/Icons/symbol-defs.svg#scissors">
                                            </use>
                                        </svg>

                                        <span class="my-auto font-weight-medium">
                                            <%= learn %>
                                        </span>
                                    </li>
                                    <% }) %>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <% } %>

        <!-- Class details -->
        <% if(course.ClassDetails !== null){ %>
        <section class="py-5 border lead">
            <div class="container">
                <h2 class="text-capitalize linear-gradient mt-lg-4">class details</h2>
                <div class="row">
                    <div class="col-md-8 lead">
                        <ul class="pl-3 mt-1">
                            <% course.ClassDetails.Details.map(detail => { %>
                            <li class="mb-3">
                                <%= detail %>
                            </li>
                            <% } )%>
                        </ul>

                        <% if(course.ClassDetails.MaterialsNeeded.length > 0){ %>
                        <h4 class="text-capitalize mt-5">materials needed</h4>

                        <ul class="pl-3 mt-3">
                            <% course.ClassDetails.MaterialsNeeded.map(detail => { %>
                            <li class="mt-3">
                                <%= detail %>
                            </li>
                            <% } )%>
                        </ul>
                        <% }%>
                    </div>
                </div>
            </div>
        </section>
        <% } %>

        <!-- Expect -->
        <% if(course.Expectation.length > 0){ %>
        <section id="Expect" class="bg-white py-5">
            <div class="container">
                <h2 class="text-capitalize linear-gradient mt-lg-4">what to expect</h2>

                <div class="row">
                    <div class="col-md-8 lead">
                        <% course.Expectation.map(expect =>{ %>
                        <div class="d-flex mt-4">
                            <svg class="text-icon mr-3" style="width:35px; height:35px;">
                                <use xlink:href="/Icons/symbol-defs.svg#check"></use>
                            </svg>

                            <span class="my-auto">
                                <%= expect %>
                            </span>
                        </div>
                        <% }) %>
                    </div>
                </div>
        </section>
        <% } %>

        <!-- Payment -->
        <section id="Payment" class="bg-light py-5">
            <div class="container">
                <h2 class="text-capitalize linear-gradient mt-lg-4">payment plans</h2>

                <% if(course.id == "fullExperience"){ %>
                <div class="row">
                    <div class="col-md-8 lead">
                        <div class="row">
                            <!-- Full payment plan -->
                            <div class="col-lg-6">
                                <div class="card shadow mt-4">
                                    <div class="card-body p-0 paymentCard">
                                        <div class="px-4 pt-4 pb-2">
                                            <h4 class="card-title">Full payment</h4>
                                            <p>Paid fully before the start of the course.</p>
                                        </div>

                                        <div class="bg-light p-4">
                                            <span class="font-weight-bold paymentPlan">
                                                &nbsp;<%= course.paymentPlans.Full %>
                                            </span>
                                        </div>

                                        <div class="p-4 mt-4">
                                            <button
                                                class="btn btn-outline-dark btn-block btn-lg text-uppercase font-weight-bold">
                                                pay now
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Installment payment plan -->
                            <div class="col-lg-6">
                                <div class="card shadow mt-4">
                                    <div class="card-body p-0 paymentCard">
                                        <div class="px-4 pt-4 pb-2">
                                            <h4 class="card-title">Installment payment</h4>
                                        </div>

                                        <div class="bg-light p-4">
                                            <span class="font-weight-bold paymentPlan">
                                                &nbsp;<%= course.paymentPlans.Installment.fullPayment %>
                                            </span>

                                            <div class="payment-details">
                                                <div class="paymentLevels">
                                                    <% course.paymentPlans.Installment.paymentLevels.map(paymentLevel =>{ %>
                                                    <h6 style="font-size: 1.25rem;"
                                                        class="mb-0 font-weight-normal mt-4">
                                                        <%= paymentLevel.title %>
                                                    </h6>

                                                    <div class="d-flex justify-content-between">
                                                        <span class="font-weight-bold my-auto">
                                                            <%= paymentLevel.amount %>
                                                        </span>

                                                        <span style="font-size: 1.1rem;" class="my-auto">
                                                            <%= paymentLevel.duration %>
                                                        </span>
                                                    </div>
                                                    <% }) %>

                                                </div>


                                            </div>
                                        </div>

                                        <div class="p-4 mt-4">
                                            <button
                                                class="btn btn-outline-dark btn-block btn-lg text-uppercase font-weight-bold">
                                                pay now
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <% }else{ %>
                <div class="row border no-gutters mt-4">
                    <% course.paymentPlans.map(plan =>{ %>
                    <div class="col-md-4">
                        <div class="card bg-light rounded-0 h-100">
                            <div class="card-header bg-light py-4">
                                <h5 class="font-weight-medium mb-0">
                                    <%= plan.Title %>
                                </h5>

                                <p>
                                    <%= plan.Duration %>
                                </p>

                                <p class="mb-0" style="font-size: 2rem; font-weight: 700">
                                    <%= plan.Price %>
                                </p>
                            </div>

                            <div class="card-body">
                                <div class="card-text">
                                    <ul class="list-unstyled">
                                        <% plan.courseContent.map(content =>{ %>
                                        <li class="mb-4">
                                            <%= content %>
                                        </li>
                                        <% }) %>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>

                </div>
                <% } %>
            </div>
        </section>
    </main>
    <% } %>

    <% }) %>
</body>

</html>