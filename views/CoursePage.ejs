                    <li class="nav-item dropdown mx-md-4">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Courses
                        </a>
    
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="/onlineCourses">Online courses</a>
                            <a class="dropdown-item" href="/onsiteCourses">Onsite courses</a>
                        </div>
                    </li>
    
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Brands
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="#">TFP Accessories</a>
                            <a class="dropdown-item" href="#">TFP Bridals</a>
                    </li>
    
                    <li class="nav-item mx-md-4">
                        <a class="nav-link" href="#">Contact us</a>
                    </li>
    
                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-warning px-3 linear-gradient" href="#">
                            Login
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <% Courses.map( course => { %>

    <% if ( course.id == courseID) { %>
    <header role="heading" class="text-center text-white py-5 coursePageHeading">
        <div class="container">
            <div class="row">
                <div class="col-md-8 text-left">
                    <h1 id="courseHeading" class="mt-5">
                        <%= course.Title %>
                    </h1>

                    <p id="courseSubTitle" class="lead">
                        <%= course.SubTitle %>
                    </p>

                    <button class="btn btn-light btn-lg rounded-sm courseBtnTextColor my-4 px-5">
                        Enroll now
                        <img src="/Icons/icon-arrow-right.svg" class="img-fluid" />
                    </button>
                </div>

                <div class="col-md-4">
                    <div class="card mt-5 border-0 shadow" style="margin-bottom: -400px;">
                        <video width="100%" height="auto" controls autoplay>
                            <source src="https://res.cloudinary.com/bolub/video/upload/v1579305953/1.mkv"
                                type="video/mp4">
                            Your browser does not support the video tag.
                        </video>

                        <div class="card-body text-dark">
                            <ul class="list-unstyled mx-2">
                                <!-- Fee -->
                                <li class="d-flex lead justify-content-between">
                                    <div class="d-flex">
                                        <svg class="text-icon my-auto mr-3" style="width:24px; height:24px;">
                                            <use class="coursePageHeaderIconColor"
                                                xlink:href="/Icons/symbol-defs.svg#cash">
                                            </use>
                                        </svg>
                                        Fee
                                    </div>

                                    <div id="fee" class="font-weight-bold"><%= course.Fee %></div>
                                </li>

                                <!-- Duration -->
                                <li class="d-flex lead justify-content-between my-4">
                                    <div class="d-flex">
                                        <svg class="text-icon my-auto mr-3" style="width:24px; height:24px;">
                                            <use class="coursePageHeaderIconColor"
                                                xlink:href="/Icons/symbol-defs.svg#time">
                                            </use>
                                        </svg>
                                        Duration
                                    </div>

                                    <div id="duration" class="font-weight-bold">
                                        <%= course.Duration %>
                                    </div>
                                </li>

                                <li class="d-flex lead justify-content-between my-3">
                                    <div class="d-flex">
                                        <svg class="text-icon my-auto mr-3" style="width:24px; height:24px;">
                                            <use class="coursePageHeaderIconColor"
                                                xlink:href="/Icons/symbol-defs.svg#duration"></use>
                                        </svg>
                                        Difficulty
                                    </div>

                                    <div id="difficulty" class="font-weight-bold">
                                        <%= course.Difficulty %>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <main role="main">
        <!-- about -->
        <% if(course.about.length > 6){ %>
        <section class="py-5 border lead bg-light">
            <div class="container">
                <h2 class="text-capitalize linear-gradient mt-4">About the course</h2>

                <div class="row">
                    <div class="col-md-8 lead">
                        <p class="mt-4">
                            <%= course.about %>
                        </p>
                    </div>
                </div>
            </div>
        </section>
        <% } %>

        <!-- Learn -->
        <% if(course.LearnOne.length > 0){ %>
        <section id="Learn" class="bg-light py-5">
            <div class="container">
                <h2 class="text-capitalize linear-gradient mt-4">what you'll learn</h2>

                <div class="row">
                    <div class="col-md-8">
                        <div class="row mt-2">
                            <div class="col-md-6">
                                <ul class="list-unstyled lead">
                                    <% course.LearnOne.map(learn => { %>
                                    <li class="d-flex mt-2">
                                        <svg class="text-icon my-auto mr-3" style="width:24px; height:24px;">
                                            <use class="coursePageHeaderIconColor"
                                                xlink:href="/Icons/symbol-defs.svg#scissors">
                                            </use>
                                        </svg>

                                        <span class="my-auto font-weight-medium">
                                            <%= learn %>
                                        </span>
                                    </li>
                                    <% }) %>
                                </ul>

                            </div>

                            <div class="col-md-6">
                                <ul class="list-unstyled lead">
                                    <% course.LearnTwo.map(learn => { %>
                                    <li class="d-flex mt-2">
                                        <svg class="text-icon my-auto mr-3" style="width:24px; height:24px;">
                                            <use class="coursePageHeaderIconColor"
                                                xlink:href="/Icons/symbol-defs.svg#scissors">
                                            </use>
                                        </svg>

                                        <span class="my-auto font-weight-medium">
                                            <%= learn %>
                                        </span>
                                    </li>
                                    <% }) %>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <% } %>

        <!-- Class details -->
        <section class="py-5 border lead">
            <div class="container">
                <h2 class="text-capitalize linear-gradient mt-4">class details</h2>
                <div class="row">
                    <div class="col-md-8 lead">
                        <ul class="pl-3 mt-3">
                            <li>Classes are availabe in all <span class="font-weight-bold linear-gradient">Ibadan, Lagos
                                    and
                                    Abuja</span> branches.</li>

                            <% course.ClassDetails.map(detail => { %>
                            <li class="mt-3">
                                <%= detail %>
                            </li>
                            <% } )%>
                        </ul>
                    </div>
                </div>
            </div>
        </section>

        <!-- Expect -->
        <% if(course.Expectation.length > 0){ %>
        <section id="Expect" class="bg-white py-5">
            <div class="container">
                <h2 class="text-capitalize linear-gradient mt-4">what to expect</h2>

                <div class="row">
                    <div class="col-md-8 lead">
                        <% course.Expectation.map(expect =>{ %>
                        <div class="d-flex mt-4">
                            <svg class="text-icon mr-3" style="width:35px; height:35px;">
                                <use xlink:href="/Icons/symbol-defs.svg#check"></use>
                            </svg>

                            <span class="my-auto">
                                <%= expect %>
                            </span>
                        </div>
                        <% }) %>
                    </div>
                </div>
        </section>
        <% } %>

        <!-- Payment -->
        <section id="Payment" class="bg-light py-5">
            <div class="container">
                <h2 class="text-capitalize linear-gradient mt-4">payment plans</h2>

                <div class="row">
                    <div class="col-md-8 lead">
                        <div class="row">
                            <!-- Full payment plan -->
                            <div class="col-lg-6">
                                <div class="card shadow mt-4">
                                    <div class="card-body p-0 paymentCard">
                                        <div class="px-4 pt-4 pb-2">
                                            <h4 class="card-title">Full payment</h4>
                                            <p>Paid fully before the start of the course.</p>
                                        </div>

                                        <div class="bg-light p-4">
                                            <span class="font-weight-bold paymentPlan">
                                                &nbsp;<%= course.paymentPlans.Full %>
                                            </span>
                                        </div>

                                        <div class="p-4 mt-4">
                                            <button
                                                class="btn btn-outline-dark btn-block btn-lg text-uppercase font-weight-bold">
                                                pay now
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Installment payment plan -->
                            <div class="col-lg-6">
                                <div class="card shadow mt-4">
                                    <div class="card-body p-0 paymentCard">
                                        <div class="px-4 pt-4 pb-2">
                                            <h4 class="card-title">Installment payment</h4>
                                        </div>

                                        <div class="bg-light p-4">
                                            <span class="font-weight-bold paymentPlan">
                                                &nbsp;<%= course.paymentPlans.Installment.fullPayment %>
                                            </span>

                                            <div class="payment-details">
                                                <div class="paymentLevels">
                                                    <% course.paymentPlans.Installment.paymentLevels.map(paymentLevel =>{ %>
                                                    <h6 style="font-size: 1.25rem;"
                                                        class="mb-0 font-weight-normal mt-4">
                                                        <%= paymentLevel.title %>
                                                    </h6>

                                                    <div class="d-flex justify-content-between">
                                                        <span class="font-weight-bold my-auto">
                                                            <%= paymentLevel.amount %>
                                                        </span>

                                                        <span style="font-size: 1.1rem;" class="my-auto">
                                                            <%= paymentLevel.duration %>
                                                        </span>
                                                    </div>
                                                    <% }) %>

                                                </div>


                                            </div>
                                        </div>

                                        <div class="p-4 mt-4">
                                            <button
                                                class="btn btn-outline-dark btn-block btn-lg text-uppercase font-weight-bold">
                                                pay now
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </section>

    </main>
    <% } %>
    <% }) %>

